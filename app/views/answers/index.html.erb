<div class="row">
  <div class="col-lg-12">
    <center><h1>Przysłane rozwiązania</h1></center>
  </div>
</div>
<div class="row">
  <div class="col-lg-6">
    <center><h2>Nie ocenione</h2></center>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Student</th>
          <th>Grupa</th>
          <th>Lekcja</th>
          <th>Ćwiczenie</th>
          <th>Godzina przysłania</th>
          <th colspan="2"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @answers.each do |answer| %>
          <tr>
            <%@exercise = Exercise.find(answer.exercise_id)%>
            <td><%= answer.student.name %> <%= answer.student.lastname %></td>
            <td><%= answer.student.group.name %></td>
            <td><%= @exercise.level %></td> 
            <td><%= @exercise.number %></td>
            <td><%= answer.updated_at.in_time_zone("Warsaw").strftime("%Y-%m-%d %H:%M:%S")%></td>
            <td><%= link_to 'Pokaż', answer , :class =>"btn btn-primary"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-lg-6">
    <center><h2>Ocenione</h2></center>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Student</th>
          <th>Grupa</th>
          <th>Ocena</th>
          <th>Lekcja</th>
          <th>Ćwiczenie</th>
          <th>Godzina przysłania</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @read_answers.each do |answer| %>
          <tr>
            <%@exercise = Exercise.find(answer.exercise_id)%>
            <%@result = Result.find_by(exercise_id: @exercise.id, student_id: answer.student.id)%>
            <td><%= answer.student.name %> <%= answer.student.lastname %></td>
            <td><%= answer.student.group.name %></td>
            <td><%= @result.earned_points%></td>
            <td><%= @exercise.level %></td> 
            <td><%= @exercise.number %></td>
            <td><%= answer.updated_at.in_time_zone("Warsaw").strftime("%Y-%m-%d %H:%M:%S")%></td>
            <td><%= link_to 'Pokaż', answer , :class =>"btn btn-primary"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>




