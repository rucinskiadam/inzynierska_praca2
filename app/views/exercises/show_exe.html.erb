<%# story = Story.find_by(:lvl, :number)%>
<div class="row">
    <div class="col-lg-2 center-glyph">
        <%=link_to show_exe_path(:lvl => @prevlvl, :number => @prevnumber) do%>
            <span class ="glyphicon glyphicon-arrow-left"></span>
        <%end%>
    </div>
    <div class="col-lg-8">
        <center><h1>Lekcja <%=params[:lvl]%></h1></center>
        <center><h2>Zadanie <%= params[:number]%></h2></center>
        <div class="form-group">
            <label>Fabuła</label>
            <center><h4><%=@story.title%></h4></center>
            <p><%= @story.content%></p>
        </div>
        <%= render 'form' %>
    </div>
    <div class="col-lg-2 center-glyph">
        <%=link_to show_exe_path(:lvl => @nextlvl, :number => @nextnumber) do%>
            <span class ="glyphicon glyphicon-arrow-right"></span>
        <%end%>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h1>Warianty ćwiczenia <%= params[:number]%></h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nr wariantu</th>
                    <th>Treść zadania</th>
                    <th>Podpowiedź</th>
                    <th>Nagroda</th>
                    <th colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                <% @exercises.each do |exercise| %>
                <tr>
                    <td><%=exercise.variant%></td>
                    <td><%=exercise.content%></td>
                    <td><%=exercise.hint%></td>
                    <td><%=exercise.reward%></td>
                    <td><%= link_to 'Edytuj', edit_exercise_path(exercise), :class =>"btn btn-info" %></td>
                    <td><%= link_to 'Usuń', exercise, method: :delete, data: { confirm: 'Czy na pewno chcesz usunąć to zadanie?' }, :class =>"btn btn-danger" %></td>
                </tr>
                <%end%>
            </tbody>
        </table>
    </div>
</div>



