
<% if logged_as_student? %>
<div class="bg_message">
    <div class="student_message_title">
        <h1>Wiadomości</h1>
    </div>
    <%= link_to messages_path(session[:user_id]) do%>
      <div class="backto_msg tooltip">
        <span>Kliknij aby wrócić do skrzynki</span>
      </div>
    <% end %>
    <div class="student_message_show">
    <h3>temat:</h3> 
    <p><%= Message.find_by(id: params[:id]).subject %></p>
    <h3>treść:</h3> 
    <p><%= Message.find_by(id: params[:id]).content %></p>
    
   </div>
   <div class="student_new_message">
        <%= link_to new_message_path(session[:user_id]) do%>
          <span>zadaj pytanie wykładowcy</span>
        <%end%>
    </div>
</div> 
<% else %>
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <center><h1>Wiadomości</h1></center>
        <h3>Nadwca</h3>
        <p><%=@student.name%> <%=@student.lastname%></p>
        <h3>Temat</h3>
        <p><%= Message.find_by(id: params[:id]).subject %></p>
        <h3>Treść</h3>
        <p><%= Message.find_by(id: params[:id]).content %></p>
        <% sid= Message.find(params[:id]) %>
        <center><%= link_to 'Odpowiedz', new_message_path(:iid => sid.student_id ), :class =>"btn btn-primary" %></center>
      </div>
    </div>
<% end %>    


